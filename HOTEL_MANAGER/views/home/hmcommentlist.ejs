<!DOCTYPE html>
<html>
<head>
	<title>Show Post</title>
</head>
<body>
	<h1>Show Comment</h1>

	<a href="/home">Back</a> | 
	<a href="/logout">logout</a> 
	<br>

	<table border="1">
		<tr>
			<td>Comment ID</td>
			<td>Comment </td>
            <td>Post ID</td>
            <td>Post Title</td>
            <td>Comment Response</td>
			<td>Tag</td>
			<td>Action</td>
		</tr>
		

		<% 
			users.forEach( function(std){ %>
			<tr>
				<td><%= std.cid %></td>
				<td><%= std.comment %></td>
                <td><%= std.pid %></td>
                <td><%= std.ptitle %></td>
                <td><%= std.cresponse %></td>
				<td><%= std.tag %></td>
				
				<!-- <td><%= std.tag %></td> -->
				<td>
					<a href="/comment/hmedit/<%= std.pid %>">Response</a> |
					<!-- <a href="/comment/delete/<%= std.pid %>">Delete</a> -->
				</td>
			</tr>

		<%
			}); 
		%>
		
	</table>

</body>
</html>

